            <%= link_to "JavaScript", repositories_path(:language => "JavaScript"), method: :get, class: 'btn btn-language btn-info btn-lg' %>
            <%= link_to "Swift", repositories_path(:language => "Swift"), method: :get, class: 'btn btn-language btn-warning btn-lg' %>
            <%= link_to "GO", repositories_path(:language => "GO"), method: :get, class: 'btn btn-language btn-success btn-lg' %>
