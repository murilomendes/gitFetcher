<div class="container-fluid bg-2 text-center">
  <h1>Repositories <%= params[:language] %></h1>
  <h5>Total of Repositories <%= @repositories.count unless @repositories.blank? %> <h5>
  <%= button_to "Back to Home", '/', method: :get, class: 'btn btn-link' %>
  <br/>
   <br/>
  <div class="row justify-content-center">
  <% if !@repositories.blank? %>
    <% @repositories.each do |repo|%>

      <div class="text-center card" style="width: 30rem; margin: 10px;">
        <div class="card-body">
          <a href='https://www.github.com/<%=repo.repo_name%>' target="_blank" class="btn btn-link"><h5 class="card-title"><%= repo.repo_name %></h5></a>
          
          <p class="card-text"><%= repo.description %></p>
        </div>
      </div>
    <% end %>
   <% end %>   
   </div> 
